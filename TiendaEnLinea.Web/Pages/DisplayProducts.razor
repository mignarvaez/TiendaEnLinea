<!-- Hereda de la clase base -->
@inherits DisplayProductsBase
@foreach (var item in Products)
{
	<div class="col-md-3 mb-2">
		<a href="/ProductDetails/@item.Id">
			<div class="card">
				<!-- Las imagenes se descargaron y guardaron en la carpeta wwwroot-->
			<img class="img-thumbnail" src="@item.ImageUrl">
				<div class="card-body">
					<h5 class="card-title mb-3">
						@item.Name
					</h5>
					<p class="card-text">
						<b>@item.Price.ToString("G")</b>
					</p>
				</div>
			</div>
		</a>
	</div>
}